pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/bhanuprakash030201/docker.git'
            }
        }
        stage('Compile') {
            steps {
                bat 'mkdir out' // Recreate the out directory
                bat 'javac -d out src\\mottu\\*.java'
            }
        }
        stage('Run') {
            steps {
                bat 'java -cp out mottu.bhanu'
            }
        }
    }
}
