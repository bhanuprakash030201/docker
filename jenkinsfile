pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                // Checkout your repository from Git
                git 'https://github.com/bhanuprakash030201/docker.git'
            }
        }
        stage('Compile') {
            steps {
                // Assuming your Java files are in the src folder
                bat 'javac -d out src\\*.java'
            }
        }
        stage('Run') {
            steps {
                // Run your compiled Java classes (adjust main class accordingly)
                bat 'java -cp out YourMainClass'
            }
        }
    }
}
